<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col col-lg-2">
                <h5>Categories:</h5>
                <ul class="list-group-item list-group-item-action">
                    <li class="list-group-item list-group-item-action list-group-item-dark">All</li>
                    <% categories.forEach(function(category) { %>
                        <li class="list-group-item list-group-item-action list-group-item-primary" >
                            <div style="display:flex; justify-content:space-between;">
                                
                                <p><%= category.title %></p>
                                <form action="/admin/categ/delete/<%= category.id%>?_method=delete" method="post" >
                                    <button class="btn btn-danger" type="submit">X</button>
                                </form>
                            </div>
                            
                        </li>
                        <% }); %> 
                    </ul>
                    <form action="/admin/addCateg" method="post">
                    <label for="title" class="mb-4">Add Category:</label>
                    <input required type="title" name="title" class="form-control">
                    <button class="btn btn-primary">+</button>
                </form>
            </div>
            <div class="col col-lg-10">
                <div class="row">
                    <% products.forEach(function(product, index) { %>
                        
                        <div class="col-3">
                            
                            <div><%= product.title %></div>
                            <img src="/upload/<%= product.id %>/<%= product.images[0] %>" alt="image not found" style="width: 150px;"/>
                            <div style="display: flex;">

                                <form action="/admin/delete/prod/<%=product.id%>?_method=delete" method="post" style="margin-right: 20px;">
                                    <button type="submit">delete</button>
                                </form>
                                <a href="/admin/product/<%=product.id%>/edit">edit</a>
                            </div>
                        </div>
                        <% if (index+1 % 5 === 0) {%>
                              <div class="w-100"></div>
                        <%}%>
                    <% }); %> 
                </div>
                <a href="/admin/addProd">Add Product</a>
            </div>
        </div>
    </div>
    
</body>
</html>