<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col col-lg-2">
                <h5>Categories:</h5>
                <form action="/admin/addCateg" method="post">
                    <ul class="list-group-item list-group-item-action">
                        <li class="list-group-item list-group-item-action list-group-item-dark">All</li>
                        <% categories.forEach(function(category) { %>
                            <li class="list-group-item list-group-item-action list-group-item-primary"><%= category.title %></li>
                        <% }); %> 
                    </ul>
                    <label for="title" class="mb-4">Add Category:</label>
                    <input required type="title" name="title" class="form-control">
                    <button class="btn btn-primary">+</button>
                </form>
            </div>
            <div class="col col-lg-10">
                <div class="row">
                    <% products.forEach(function(product) { %>
                        
                        <div class="col-3">
                            
                            <div><%= product.title %></div>
                            <img src="/upload/<%= product.id %>/<%= product.images[0] %>" alt="image not found" style="width: 150px;"/>
                            <a href="/admin/product/<%=product.id%>/edit">edit</a>
                        </div>
                        <% if (product.id % 4 === 0) {%>
                              <div class="w-100"></div>
                        <%}%>
                    <% }); %> 
                </div>
                <a href="/admin/addProd">Add Product</a>
            </div>
        </div>
    </div>
    
</body>
</html>