<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col col-lg-2">
                <a href="/user/checkout">checkout</a>
                <h5>Categories:</h5>
                <ul class="list-group-item list-group-item-action">
                    <li class="list-group-item list-group-item-action list-group-item-dark"><a href="/user">All</a></li>
                    <% categories.forEach(function(category) { %>
                        <li class="list-group-item list-group-item-action list-group-item-primary" >
                            <div style="display:flex; justify-content:space-between;">
                                <a href="/user/products/byCateg/<%=category.id%>"><%= category.title %></a>
                                
                            </div>
                            
                        </li>
                        <% }); %> 
                    </ul>                    
                </form>
            </div>
            <div class="col col-lg-10">
                <div class="row">
                    <% products.forEach(function(product) { %>
                        
                        <div class="col-3">
                            
                            <div><%= product.title %></div>
                            <img src="/upload/<%= product.id %>/<%= product.images[0] %>" alt="image not found" style="width: 150px;"/>
                            <p><%=product.price%> - USD <a href="/user/products/<%=product.id%>">show case</a></p> 
                            <form action="/user/products/addtoCart" method="post">
                                <input type="number" name="product_id" value="<%=product.id%>" hidden>
                                <input type="number" name="cart_id" value="<%=cart.id%>" hidden>
                                <button type="submit">Add to Cart</button>
                            </form>
                        </div>
                        <% if (product.id % 4 === 0) {%>
                              <div class="w-100"></div>
                        <%}%>
                    <% }); %> 
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>